@model Armazem.Models.Produto

@{
    ViewData["Title"] = "Atualizar Produto " + Model.Nome;
}

<div class="container p-5">
    <div class="row">
        <div class="col-6 border border-light rounded p-5 shadow">
            <h6>Atualizar produto @Model.Nome</h6>
            <hr />

            <div class="row">
                <div class="col-10">
                    <form asp-action="AtualizarProduto">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <input asp-for="ProdutoId" hidden />

                        <div class="form-group">
                            <label asp-for="Nome" class="control-label"></label>
                            <input asp-for="Nome" class="form-control form-control-sm" />
                            <span asp-validation-for="Nome" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="Preco" class="control-label"></label>
                            <input asp-for="Preco" class="form-control form-control-sm" />
                            <span asp-validation-for="Preco" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="CategoriaId" class="control-label">Categoria</label>
                            <select asp-for="CategoriaId" asp-items="ViewBag.opcoesCategoria" class="form-control form-control-sm"></select>
                        </div>
                        <div class="form-group pt-2">
                            <div class="container">
                                <div class="row">
                                    <input type="submit" value="Atualizar" class="btn btn-sm btn-outline-info" /> &emsp;
                                    <a asp-action="Index" class="btn btn-sm btn-light">Voltar</a>
                                </div>
                            </div>

                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>